{
  "compilerOptions": {
    "baseUrl": ".", 
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "es2020", 
    "module": "commonjs",
    "skipLibCheck": true,
    "noImplicitAny": false, 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 
    "paths": {
      "utils/*":["src/utils/*"],
      "models/*":["src/models/*"],
      "errors/*":["src/errors/*"],
      "services/*":["src/services/*"],
      "middlewares/*":["src/middlewares/*"],
      "repositories/*":["src/repositories/*"]
    }
  },
  "exclude": [
    "tools",
    "./__tests__",
    "plopfile.ts"
  ]
}
